<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cyl.wandroid.ui.widget.CircleTextHeadView
        android:id="@+id/civHeadIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="3dp"
        android:text="CoderCyl"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/civHeadIcon"
        app:layout_constraintTop_toTopOf="@id/civHeadIcon" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="CoderCyl"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/civHeadIcon"
        app:layout_constraintLeft_toLeftOf="@id/tvNickname"
        app:layout_constraintLeft_toRightOf="@id/civHeadIcon" />


    <TextView
        android:id="@+id/tvTranslucentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:scaleY="1.2"
        android:text="1245698"
        android:textColor="@color/translucent_white"
        android:textSize="50sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>